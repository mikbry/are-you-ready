{
  "extends": [
    "airbnb",
    "plugin:import/errors",
    "plugin:jest/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "jquery": false,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "jest"],
  "ignorePatterns": ["**/dist", "node_modules/"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "import/prefer-default-export": "off",
    "prettier/prettier": ["error", {
        "trailingComma": "all",
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 120
    }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
